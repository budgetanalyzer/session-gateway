# Session Gateway Environment Variables
# Copy this file to .env and fill in your Auth0 credentials

# Auth0 Configuration
# Get these values from your Auth0 dashboard:
# Applications > budget-analyzer-web > Settings

# Auth0 Domain (e.g., your-tenant.auth0.com)
AUTH0_ISSUER_URI=https://your-tenant.auth0.com

# Auth0 Client ID
AUTH0_CLIENT_ID=your-client-id-here

# Auth0 Client Secret
AUTH0_CLIENT_SECRET=your-client-secret-here

# Auth0 API Audience (Identifier from Auth0 API)
AUTH0_AUDIENCE=https://api.budgetanalyzer.org

# Logout Return URL (where to redirect after logout)
AUTH0_LOGOUT_RETURN_TO=http://localhost:3000

# Redis Configuration
# For local development, Redis should be running on localhost:6379
# For Docker, change to 'redis' to use the Docker service name
# REDIS_HOST=localhost
# REDIS_PORT=6379

# NGINX Gateway URL
# For local development: http://localhost:8080
# For Docker: http://nginx-gateway:80
# NGINX_GATEWAY_URI=http://localhost:8080
